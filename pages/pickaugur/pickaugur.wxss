/* pages/pickaugur/pickaugur.wxss */
image{
  width: 100%;
  height: 100%;
}

.main_wrap{
  width: 100%;
  height: 100%;
  position: relative;
}

.pick-container{
  width: 100%;
  height: 100%;
  overflow: hidden;
  position: absolute;
  top: 0;
  left: 0;
  font-family: "黑体";
  font-size: 36rpx;
  color: #fff;
}

.choose_text{
  margin-top: 195rpx;
  width: 100%;
  display: flex;
  justify-content: center;
  align-items: center;
}

.choose_item{
  width: 455rpx;
  height: 152rpx;
  position: relative;
  margin: 66rpx 0 0 147rpx;
}

.button_text{
  position: absolute;
  left: 50%;
  top: 50%;
  transform: translate(-50%,-50%);
  color: #6f24a0;
}