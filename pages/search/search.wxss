/* pages/search/search.wxss */
.content_wrap{
  width: 100%;
  height: 100%;
  position: absolute;
  left: 0;
  top: 0;
  overflow: hidden;
  font-family: "黑体"
}

image{
  width: 100%;
  height: 100%;
}

.augur_img image{
  border-radius: 100%;
}

.tip_wrap{
  width: 100%;
  margin-top: 80rpx;
  letter-spacing: 5rpx;
  color: #fff;
  font-size: 28rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}

.search_wrap{
  width: 100%;
  height: 75rpx;
  margin-top: 22rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  box-sizing: border-box;
}

.input{
  background: white;
  width: 360rpx;
  height: 75rpx;
  box-sizing: border-box;
  border-radius: 10rpx;
  font-size: 28rpx;
  color: #3e3a39;
  letter-spacing: 5rpx;
  padding: 13rpx 40rpx;
}

.slidearea_wrap{
  width: 100%;
  height: 750rpx;
  margin-top: 25rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  box-sizing: border-box;
}

.slidearea{
  width: 600rpx;
  height: 750rpx;
  box-sizing: border-box;
  border-radius: 7rpx;
  padding: 24rpx 16rpx;
}

.slidearea_bg{
  width: 600rpx;
  height: 750rpx;
  min-height: 750rpx;
  border-radius: 7rpx;
  /* position: absolute;
  top: 0;
  left: 0; */
  position: fixed;
  left: 75rpx;
  top: 233rpx;
  background-color: white;
  opacity: 0.3;
}

.scrollitem{
  width: 170rpx;
  height: 226rpx;
  margin-top: 14rpx;
  margin-left: 14rpx;
  box-sizing: border-box;
  position: relative;
  font-size: 28rpx;
  display: inline-block;
}

.augur_bg{
  width: 170rpx;
  height: 226rpx;
  border-radius: 7rpx;
  background-color: white;
  opacity: 0.5;
}

.augur_img{
  position: absolute;
  top: 14rpx;
  left: 26rpx;
  width: 118rpx;
  height: 118rpx;
  border-radius: 100%;
  background-color: white;
}

.augur_status{
  position: absolute;
  top: 140rpx;
  width: 100%;
  text-align: center;
  letter-spacing: 4rpx;
}

.augur_name{
  position: absolute;
  width: 100%;
  overflow: hidden;
  text-overflow: ellipsis;
  text-align: center;
  bottom: 12rpx;
  color: #fff;
  white-space: nowrap;
}

.blue{
  color: #c7fffb;
}

.orange{
  color: #ff6631;
}

.grey{
  color: #9fadad;
}

.button_block{
  width: 100%;
  display: flex;
  justify-content: center;
  align-items: center;
  margin-top: 20rpx;
}

.button{
  width: 220rpx;
  height: 90rpx;
  position: relative;
}

.submit{
  width: 220rpx;
  height: 90rpx;
  position: absolute;
  top: 0;
  left: 0;
  display: flex;
  justify-content: center;
  align-items: center;
  font-size: 30rpx;
  letter-spacing: 5rpx;
  color: #6f24a0;
}